<Alloy>
    <!-- Index -->
    <NavigationWindow platform="ios">
        <Window title="Window Manager Demo">
            <TableView id="demos" onClick="selectedDemo">
                    <TableViewRow _id="loadDrawerManager" title="Drawer Manager 2.1.2"/>
                    <TableViewRow _id="loadTabsManager" title="Tabs Manager 0.9.2"/>
            </TableView>
        </Window>
    </NavigationWindow>

    <Window title="Window Manager Demo" platform="android">
        <TableView id="demos" onClick="selectedDemo">
            <TableViewRow _id="loadDrawerManager" title="Drawer Manager 2.1.2"/>
            <TableViewRow _id="loadTabsManager" title="Tabs Manager 0.9.2"/>
        </TableView>
    </Window>


    <!-- For DrawerManager.2.1.2 -->

    <!-- Left View -->
    <Window id="leftView">
        <Label>Left View</Label>
    </Window>

    <!-- Center View -->
    <TableView id="options" onClick="selectedOption">
        <TableViewSection>
            <TableViewRow _id="openModalWin" title="Open Modal Window"/>
            <TableViewRow _id="openChildWin" title="Open Children Window"/>
        </TableViewSection>
        <TableViewSection headerTitle="Left View">
            <TableViewRow _id="openLeftView" title="Open"/>
        </TableViewSection>
        <TableViewSection headerTitle="Right View">
            <TableViewRow _id="openRightView" title="Open"/>
        </TableViewSection>
        <TableViewSection headerTitle="Drawer Manager 2.1.2">
            <TableViewRow _id="exitDrawerManager" title="Exit"/>
        </TableViewSection>
    </TableView>

    <!-- Right View -->
    <Window id="rightView">
        <Label>Right View</Label>
    </Window>


    <!-- For TabsManager.0.9.2 -->

    <!-- Tabs -->
    <TabGroup id="tabGroup">
        <Tab id="tab1" title="Children">
            <Window id="win1" title="Tabs Manager 0.9.2">
                <Label onClick="openChildWindow">Open a children window</Label>
            </Window>
        </Tab>

        <Tab id="tab2" title="Modal">
            <Window id="win2">
                <Label onClick="openModalWindow">Open a modal window</Label>
            </Window>
        </Tab>

        <Tab id="tab3" title="Exit">
            <Window id="win3">
                <Label onClick="exitCurrentFlow">Exit Tabs Manager</Label>
            </Window>
        </Tab>
    </TabGroup>
</Alloy>