<Alloy>
	<!-- Left View -->
	<Window id="leftView">
		<Label>Left View</Label>
	</Window>
	
	<!-- Center View -->
	<TableView id="options" onClick="selectedOption">
		<TableViewSection>
			<TableViewRow title="Open Modal Window"/>
			<TableViewRow title="Open Children Window"/>
		</TableViewSection>
		<TableViewSection id="sectionVeg" headerTitle="Left View">
			<TableViewRow title="Open"/>
		</TableViewSection>
		<TableViewSection id="sectionFish" headerTitle="Right View">
			<TableViewRow title="Open"/>
		</TableViewSection>
	</TableView>

	<!-- Right View -->
	<Window id="rightView">
		<Label>Right View</Label>
	</Window>

	<Tab id="tab1" title="Tab 1">
		<Window id="win1">
			<Label onClick="openChildWindow">Open a children window</Label>
		</Window>
	</Tab>

	<Tab id="tab2" title="Tab 2">
		<Window id="win2">
			<Label onClick="openModalWindow">Open a modal window</Label>
		</Window>
	</Tab>

</Alloy>