<Alloy>
    <TableView id="options" onClick="selectedOption">
        <TableViewSection>
            <HeaderView>
                <View class="headerView">
                    <Label class="headerTitle">Window</Label>
                </View>
            </HeaderView>
            <TableViewRow action="openModalWin" >
                <Label class="rowTitle">Open a modal Window</Label>
            </TableViewRow>
            <TableViewRow id="openChildWinRow" action="openChildWin" >
                <Label class="rowTitle">Open a children Window</Label>
            </TableViewRow>
            <TableViewRow id="closeWinRow" action="close" >
                <Label class="rowTitle">Close</Label>
            </TableViewRow>
        </TableViewSection>

        <!-- Only for Drawer -->
        <TableViewSection id="forDrawerSection">
            <HeaderView>
                <View class="headerView">
                    <Label class="headerTitle">Drawer View</Label>
                </View>
            </HeaderView>
            <TableViewRow action="openLeftView" >
                <Label class="rowTitle">Open Left View</Label>
            </TableViewRow>
            <TableViewRow action="openRightView" >
                <Label class="rowTitle">Open Right View</Label>
            </TableViewRow>
        </TableViewSection>

        <TableViewSection id="flowSection">
            <HeaderView>
                <View class="headerView">
                    <Label class="headerTitle">Flow</Label>
                </View>
            </HeaderView>
            <TableViewRow id="exitFlow" action="exitFlow" >
                <Label class="rowTitle">Exit</Label>
            </TableViewRow>

        </TableViewSection>
    </TableView>
</Alloy>
